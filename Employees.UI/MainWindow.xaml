<Window x:Class="Employees.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Project Overlaps" Height="600" Width="900">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <Button Content="Load CSV"
                    Click="LoadCsv_Click"
                    Width="120"
                    Height="35"
                    Margin="0 0 15 0"/>

            <TextBlock x:Name="FilePathText"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="Gray"/>
        </StackPanel>

        <DataGrid x:Name="GridResults"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  IsReadOnly="True"/>

        <TextBlock x:Name="BestPairText"
                   Grid.Row="2"
                   Margin="0 10 0 0"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="DarkGreen"/>
    </Grid>
</Window>
